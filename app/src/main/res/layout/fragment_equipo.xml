<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EquipoFragment"
    android:background="@color/blue_A700">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/boton_redondo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/shield"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="Real Madrid"
                    android:textSize="40dp"
                    android:textColor="@color/blue_A700"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Ultimo partido:"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/overlay_dark_90"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Real Madrid"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/blue_A700"
                        android:textStyle="italic"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shield"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="2-2"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/blue_A700"
                        android:textStyle="italic"
                        android:textSize="20dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/betis"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Real Betis"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/blue_A700"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:text="Proximo partido:"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/overlay_dark_90"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Real Madrid"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/blue_A700"
                        android:textStyle="italic"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shield"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:text="21:00"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/blue_A700"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/barcelona"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="FC Barcelona"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/blue_A700"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:background="@drawable/boton_redondo"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goleador: Karim Benzema "
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:textColor="@color/blue_A700"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/benzema"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18 goles "
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:textColor="@color/blue_A700"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:background="@drawable/boton_redondo"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jugador estrella: Vinicius JR. "
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:textColor="@color/blue_A700"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/elputoamo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="el puto amo "
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:textColor="@color/blue_A700"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>